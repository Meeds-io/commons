<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

  <!-- Managing both DB that use sequences and db that use auto increment -->
  <property name="autoIncrement" value="true" dbms="mysql,mssql,h2,sybase,db2,hsqldb"/>
  <property name="autoIncrement" value="false" dbms="oracle,postgresql"/>

  <!-- Managing auto generation of timestamp by Database -->
  <property name="now" value="now()" dbms="mysql,hsqldb,postgresql,h2"/>
  <property name="now" value="sysdate" dbms="oracle"/>
  <property name="now" value="CURRENT_TIMESTAMP" dbms="mssql"/>


  <changeSet author="file" id="1.0.0-1">
    <createTable tableName="COMMONS_NAMESPACES">
      <column name="NAMESPACE_ID" type="INT" autoIncrement="${autoIncrement}" startWith="1">
        <constraints nullable="false" primaryKey="true" primaryKeyName="PK_COMMONS_NAMESPACES_ID"/>
      </column>
      <column name="NAME" type="NVARCHAR(10)">
        <constraints nullable="false"/>
      </column>
      <column name="DESCRIPTION" type="NVARCHAR(100)"/>
    </createTable>
    <modifySql dbms="mysql">
      <append value=" ENGINE=INNODB CHARSET=UTF8 COLLATE utf8_general_ci"/>
    </modifySql>
  </changeSet>

  <changeSet author="file" id="1.0.0-2">
    <createTable tableName="COMMONS_FILES">
      <column name="FILE_ID" type="BIGINT" autoIncrement="${autoIncrement}" startWith="1">
        <constraints nullable="false" primaryKey="true" primaryKeyName="PK_COMMONS_FILES_ID"/>
      </column>
      <column name="NAMESPACE_ID" type="INT">
        <constraints nullable="false" foreignKeyName="FK_COMMONS_FILES_NAMESPACE_ID" references="COMMONS_NAMESPACES(NAMESPACE_ID)"/>
      </column>
      <column name="NAME" type="NVARCHAR(550)">
        <constraints nullable="false"/>
      </column>
      <column name="MIMETYPE" type="NVARCHAR(100)"/>
      <column name="SIZE" type="BIGINT"/>
      <column name="UPDATED_DATE" type="TIMESTAMP">
        <constraints nullable="false"/>
      </column>
      <column name="UPDATER" type="NVARCHAR(100)"/>
      <column name="CHECKSUM" type="NVARCHAR(100)"/>
      <column name="DELETED" type="BOOLEAN" defaultValueBoolean="false"/>
    </createTable>
    <modifySql dbms="mysql">
      <append value=" ENGINE=INNODB CHARSET=UTF8 COLLATE utf8_general_ci"/>
    </modifySql>
  </changeSet>

  <changeSet author="file" id="1.0.0-3">
    <createTable tableName="COMMONS_DELETED_FILES">
      <column name="ID" type="INT" autoIncrement="${autoIncrement}" startWith="1">
        <constraints nullable="false" primaryKey="true" primaryKeyName="PK_COMMONS_DELETED_ID"/>
      </column>
      <column name="FILE_ID" type="BIGINT">
        <constraints nullable="false" foreignKeyName="FK_COMMONS_DELETED_FILE_ID" references="COMMONS_FILES(FILE_ID)"/>
      </column>
      <column name="ORDER_NUM" type="INT">
        <constraints nullable="false"/>
      </column>
      <column name="DELETED_DATE" type="TIMESTAMP">
        <constraints nullable="false"/>
      </column>
      <column name="CHECKSUM" type="NVARCHAR(100)"/>
    </createTable>
    <modifySql dbms="mysql">
      <append value=" ENGINE=INNODB CHARSET=UTF8 COLLATE utf8_general_ci"/>
    </modifySql>
  </changeSet>

  <changeSet author="file" id="1.0.0-4" dbms="oracle,postgresql">
    <createSequence sequenceName="SEQ_COMMONS_FILES_FILE_ID" startValue="1"/>
  </changeSet>

  <changeSet author="file" id="1.0.0-5" dbms="oracle,postgresql">
    <createSequence sequenceName="SEQ_COMMONS_NAMESPACES_NAMESPACE_ID" startValue="1"/>
  </changeSet>

  <changeSet author="file" id="1.0.0-6" dbms="oracle,postgresql">
    <createSequence sequenceName="SEQ_COMMONS_DELETED_FILES_ID" startValue="1"/>
  </changeSet>

</databaseChangeLog>