            <value-param>
                <name>activeConnector</name>
                <value>GluuFido2Connector</value>
            </value-param>
        </init-params>
    </component>
    
    <component>
        <key>org.exoplatform.mfa.rest.fido.FidoRestService</key>
        <type>org.exoplatform.mfa.rest.fido.FidoRestService</type>
    </component>
    
    <external-component-plugins>
        <target-component>org.exoplatform.mfa.api.fido.FidoService</target-component>
        <component-plugin>
            <name>GluuFido2Connector</name>
            <set-method>addConnector</set-method>
            <type>org.exoplatform.mfa.impl.fido.GluuFido2Connector</type>
            <description>FidoConnector</description>
            <init-params>
                <value-param>
                    <name>serverUrl</name>
                    <value>${exo.mfa.fido.serverUrl:}</value>
                </value-param>
            </init-params>
        </component-plugin>
