            <value-param>
                <name>protectedGroupNavigations</name>
                <value>${exo.mfa.protectedGroupNavigations:}</value>
            </value-param>
            <value-param>
                <name>mfaSystem</name>
                <value>${exo.mfa.system:fido2}</value>
            </value-param>
            <value-param>
                <name>protectedGroups</name>
                <value>${exo.mfa.protectedGroups:}</value>
            </value-param>
        </init-params>
    </component>
    
