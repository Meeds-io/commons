<configuration
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
    xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">

  <component>
    <key>org.exoplatform.addons.es.index.IndexingService</key>
    <type>org.exoplatform.addons.es.index.impl.QueueIndexingService</type>
  </component>

  <component>
    <key>org.exoplatform.addons.es.index.IndexingOperationProcessor</key>
    <type>org.exoplatform.addons.es.index.impl.ElasticIndexingOperationProcessor</type>
  </component>

  <component>
    <type>org.exoplatform.addons.es.client.ElasticSearchingClient</type>
  </component>

  <component>
    <type>org.exoplatform.addons.es.client.ElasticIndexingClient</type>
  </component>

  <component>
    <type>org.exoplatform.addons.es.client.ElasticContentRequestBuilder</type>
  </component>

  <component>
    <type>org.exoplatform.commons.persistence.impl.EntityManagerService</type>
  </component>

  <component>
      <type>org.exoplatform.addons.es.client.ElasticIndexingAuditTrail</type>
  </component>

  <component>
    <key>org.exoplatform.addons.es.dao.IndexingOperationDAO</key>
    <type>org.exoplatform.addons.es.dao.impl.IndexingOperationDAOImpl</type>
  </component>

  <component>
    <type>org.exoplatform.addons.es.rest.IndexingManagementRestServiceV1</type>
  </component>

  <external-component-plugins>
    <target-component>org.exoplatform.commons.api.persistence.DataInitializer</target-component>
    <component-plugin>
      <name>EXoEsSearchChangeLogsPlugin</name>
      <set-method>addChangeLogsPlugin</set-method>
      <type>org.exoplatform.commons.persistence.impl.ChangeLogsPlugin</type>
      <init-params>
        <values-param>
          <name>changelogs</name>
          <description>Change logs of eXo ES Search</description>
          <value>db/changelog/exo-search.db.changelog-1.0.0.xml</value>
        </values-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.services.scheduler.JobSchedulerService</target-component>
    <component-plugin>
      <name>BulkIndexingJob</name>
      <set-method>addPeriodJob</set-method>
      <type>org.exoplatform.services.scheduler.PeriodJob</type>
      <description>Init job for bulk indexing to Elastic search</description>
      <init-params>
        <properties-param>
          <name>job.info</name>
          <description>details of the execution of the bulk indexing job</description>
          <property name="jobName" value="ESBulkIndexer"/>
          <property name="groupName" value="ElasticSearch"/>
          <property name="job" value="org.exoplatform.addons.es.job.BulkIndexingJob"/>
          <property name="repeatCount" value="0"/>
          <property name="period" value="${exo.es.bulk.job.period:5000}"/><!-- default 5 seconds -->
          <property name="startTime" value="+60000"/><!-- start after 1 minute delay -->
          <property name="endTime" value=""/>
        </properties-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>
</configuration>
