<?xml version="1.0" encoding="ISO-8859-1" ?>
<web-app
        version="3.0"
        metadata-complete="true"
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <display-name>welcome-screens</display-name>
    <absolute-ordering />

    <!-- ================================================================== -->
    <!-- LISTENER -->
    <!-- ================================================================== -->
    <listener>
        <listener-class>org.exoplatform.container.web.PortalContainerConfigOwner</listener-class>
    </listener>

    <!-- ================================================================== -->
    <!--           SERVLET                                                  -->
    <!-- ================================================================== -->
    <servlet>
        <servlet-name>GateInServlet</servlet-name>
        <servlet-class>org.gatein.wci.api.GateInServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <!--  =================================================================  -->
    <servlet-mapping>
        <servlet-name>GateInServlet</servlet-name>
        <url-pattern>/gateinservlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UnlockServlet</servlet-name>
        <servlet-class>org.exoplatform.software.register.web.UnlockServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UnlockServlet</servlet-name>
        <url-pattern>/trial</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TermsAndConditionsViewServlet</servlet-name>
        <servlet-class>org.exoplatform.welcomescreens.web.TermsAndConditionsViewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TermsAndConditionsActionServlet</servlet-name>
        <servlet-class>org.exoplatform.welcomescreens.web.TermsAndConditionsActionServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SoftwareRegisterViewServlet</servlet-name>
        <servlet-class>org.exoplatform.software.register.web.SoftwareRegisterViewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SoftwareRegisterActionServlet</servlet-name>
        <servlet-class>org.exoplatform.software.register.web.SoftwareRegisterActionServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>TermsAndConditionsViewServlet</servlet-name>
        <url-pattern>/terms-and-conditions</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>TermsAndConditionsActionServlet</servlet-name>
        <url-pattern>/terms-and-conditions-action</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SoftwareRegisterViewServlet</servlet-name>
        <url-pattern>/software-register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SoftwareRegisterActionServlet</servlet-name>
        <url-pattern>/software-register-action</url-pattern>
    </servlet-mapping>
</web-app>
